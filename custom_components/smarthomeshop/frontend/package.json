{
  "name": "smarthomeshop-cards",
  "version": "1.0.0",
  "description": "SmartHomeShop.io Lovelace Cards for Home Assistant",
  "main": "dist/smarthomeshop-cards.js",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "dev": "npm run build && npm run watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "copy": "cp dist/smarthomeshop-cards.js ../js/",
    "build:prod": "npm run build && npm run copy"
  },
  "keywords": [
